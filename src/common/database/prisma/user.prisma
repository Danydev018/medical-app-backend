enum UserType {
    USER
    MODERATOR
}

enum Permission {
    GUEST
    PREMIUM
    WORKER
    ADMIN
    SUPER_ADMIN
}

model User {
    id       Int    @id @default(autoincrement())
    name     String
    email    String @unique
    password String

    userType   UserType   @default(USER)
    permission Permission @default(GUEST)

    employee Employee?
    costumer Costumer?

    orders Order[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Employee {
    id        Int    @id @default(autoincrement())
    firstName String
    lastName  String

    userId Int?  @unique
    user   User? @relation(fields: [userId], references: [id])

    branchId Int
    branch   Branch @relation(fields: [branchId], references: [id])

    positionId Int
    position   Position @relation(fields: [positionId], references: [id])

    startDate DateTime
    endDate   DateTime?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Costumer {
    id Int @id @default(autoincrement())

    firstName String
    lastName  String

    phone   String
    address String

    userId Int  @unique
    user   User @relation(fields: [userId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Position {
    id          Int        @id @default(autoincrement())
    name        String
    description String
    employees   Employee[]
    createdAt   DateTime   @default(now())
    updatedAt   DateTime   @updatedAt
}
